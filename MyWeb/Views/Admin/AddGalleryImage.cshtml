
@{
    ViewBag.Title = "AddGalleryImage";
}
<style>
    * {
        color: white;
    }

    hr {
        border: 1px dashed white;
    }
</style>
<div style="background-color: #6f6f6f; padding: 40px; border-radius: 20px;" class="text-center mt-5">
    <h2>AddGalleryImage</h2>
    <hr />
    <form action="/admin/addgalleryimage" method="post" enctype="multipart/form-data">
        <input type="file" name="image" value="" multiple style="margin-bottom: 50px;" />
        <button class="btn btn-danger">Send</button>
    </form>
    @if (ViewBag.Status != null)
    {
        <p class="text-danger">@ViewBag.Status</p>
    }
</div>

<div class="text-center mt-5">
    @Html.ActionLink("Back to Admin Page", "Home", null, new { @class = "btn btn-outline-primary" })
</div>
