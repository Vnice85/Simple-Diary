
@{
    ViewBag.Title = "PageNotFound";
}
<style>
    :root {
        --yellow: #FFFFB5;
        --pink: #FEE1E8;
        --light-violet: #F3E4F5;
        --red: #FD8A8A;
        --violet: #D8BEE5;
        --blue: #BEDDF1;
        --green: #D1FEB8;
    }
